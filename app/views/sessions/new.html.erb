<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %> alert-dismissible fade show"><%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class="container text-center fs-1 mt-5 mb-3">
  Welcome to the Surface Treatment Manager!<br>
  Please login with your account.
</div>

<div class="container w-25">
  <div class="fs-1 text-center mt-5 mb-3">Log in</div>

  <%= form_with(scope: :session, url: login_path) do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control mb-3' %>

    <%= form.label :password %>
    <%= form.password_field :password, class: 'form-control mb-4' %>

    <%= form.submit "Log in", class: 'col-12 btn btn-primary' %>
  <% end %>

  <div class="text-center mt-5">
    <%= link_to "If you don't have an account, click here.", signup_path %>
  </div>
</div>