<div class="container w-50">
  <div class="text-center mb-3 fs-1">
    Sample Index
  </div>

  <div class="row">
    <% @samples.each do |sample| %>
      <div class="col-4 mb-3 text-center">
        <%= link_to sample.name, sample %>
      </div>
    <% end %>
  </div>

  <div class="row mt-3">
    <div class="col text-center">
      <%= will_paginate @samples, class: "justify-content-center" %>
    </div>
  </div>

  <div class="mt-3 text-center">
    <%= link_to "Sample New", new_sample_path %>
  </div>
</div>
