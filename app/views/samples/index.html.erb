<%= content_for(:title, '表面処理リスト') %>

<div class="container text-center w-50">
  <h3 class="mt-5 mb-5">表面処理リスト</h3>

  <div class="list-group list-group-flush mb-2">
    <div class="list-group-item list-group-item-action">
      <div class="d-flex w-100 justify-content-between">
        <h6>処理名 / カテゴリー</h6>
        <h6>メーカー名</h6>
      </div>
    </div>

    <% @samples.each do |sample| %>
      <%= link_to sample, class: "list-group-item list-group-item-action" do %>
        <div class="d-flex w-100 justify-content-between">
          <h6><%= sample.name %></h6>
          <h6><%= sample.maker %></h6>
        </div>
        <h6 class="text-start"><%= sample.category %></h6>
      <% end %>
    <% end %>
  </div>

  <% if @samples.any? %>
    <ul class="pagination justify-content-center mb-5">
      <%= render 'previous_page', pages: @samples %>
      <%= render 'pages', pages: @samples %>
      <%= render 'next_page', pages: @samples %>
    </ul>
  <% end %>

  <div class="d-flex justify-content-evenly">
    <%= link_to '表面処理情報の登録', new_sample_path %>
    <%= link_to 'メインメニューへ', home_path %>
  </div>
</div>
