<%= content_for(:title, 'Search result of surface treatment') %>

<div class="container w-50">
  <%= render 'searches/headline' %>

  <div class="list-group list-group-flush mb-3">
    <%= render 'searches/list_label' %>
    <%= render 'searches/search_result', samples: @samples %>
  </div>

  <% if @samples.any? %>
    <ul class="pagination justify-content-center mb-5">
      <% if @samples.previous_page %>
        <li class="page-item">
          <a class="page-link" href="/category/category/search?commit=Search&page=<%= @samples.previous_page %>&selectword=<%= @selectword %>">Previous</a>
        </li>
      <% else %>
        <%= render 'disabled_previous_pages' %>
      <% end %>

      <% 1.upto(@samples.total_pages) do |page| %>
        <li class="page-item <%= 'active' if @samples.current_page == page %>">
          <a class="page-link" href="/category/category/search?commit=Search&page=<%= page %>&selectword=<%= @selectword %>"><%= page %></a>
        </li>
      <% end %>

      <% if @samples.next_page %>
        <li class="page-item">
          <a class="page-link" href="/category/category/search?commit=Search&page=<%= @samples.next_page %>&selectword=<%= @selectword %>">Next</a>
        </li>
      <% else %>
        <%= render 'disabled_next_pages' %>
      <% end %>
    </ul>
  <% end %>

  <%= render 'searches/sub_menu', path: category_category_path %>
</div>
