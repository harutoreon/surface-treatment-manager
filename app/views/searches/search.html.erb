<%= render 'shared/header' %>

<div class="container text-center w-50">
  <div class="mb-3 fs-1">
    Search Result
  </div>

  <div class="col-12">
    <% if @samples.any? %>
      <% @samples.each do |sample| %>
        <div class="mb-3">
          <%= link_to sample.name, sample_path(sample) %>
        </div>
      <% end %>
    <% else %>
      <div class="mt-5 mb-5 fs-3">
        No matching sample.
      </div>
    <% end %>
  </div>

  <div class="mt-5">
    <%= link_to 'Sample Index', samples_path %>
  </div>
</div>
