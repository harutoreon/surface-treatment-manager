<%= provide(:title, 'User Information') %>

<%= render 'shared/header' %>

<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %> alert-dismissible fade show"><%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class="container w-25">
  <h3 class="text-center mb-5">User Information</h3>

  <div class="list-group mb-5">
    <li class="d-flex justify-content-between list-group-item">
      <div>Name :</div>
      <div><%= @user.name %></div>
    </li>
    <li class="d-flex justify-content-between list-group-item">
      <div>Class :</div>
      <% if @user.admin? %>
        <div>admin</div>
      <% else %>
        <div>general</div>
      <% end %>
    </li>
  </div>

  <div class="d-flex justify-content-evenly">
    <div><%= link_to 'Edit', edit_user_path(@user) %></div>
    <div><%= link_to "Destroy", @user, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></div>
    <div><%= link_to 'List', users_path %></div>
  </div>
</div>
