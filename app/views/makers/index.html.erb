<%= content_for(:title, 'Maker List') %>

<%= render 'shared/header' %>

<%= render 'shared/flash_message' %>

<div class="container w-50">
  <h3 class="text-center mt-5 mb-5">Maker List</h3>

  <ul class="list-group mb-5">
    <% @makers.each do |maker| %>
      <%= link_to maker, class: "list-group-item list-group-item-action" do %>
        <div class="d-flex justify-content-between">
          <h6><%= maker.name %></h6>
          <small>TEL: <%= maker.phone_number %></small>
        </div>
        <div class="d-flex justify-content-between">
          <small>ã€’<%= maker.postal_code %> <%= maker.address %></small>
          <small>FAX: <%= maker.fax_number %></small>
        </div>
      <% end %>
    <% end %>
  </ul>

  <% if @makers.any? %>
    <ul class="pagination justify-content-center mb-5">
      <%= render 'previous_page', pages: @makers %>
      <%= render 'pages',         pages: @makers %>
      <%= render 'next_page',     pages: @makers %>
    </ul>
  <% end %>

  <div class="d-flex justify-content-evenly">
    <%= link_to 'New Registration', new_maker_path %>
    <%= link_to 'Main Menu', home_path %>
  </div>
</div>
