<%= provide(:title, 'Category Information') %>

<%= render 'shared/header' %>

<div class="container w-25">
  <h3 class="text-center mb-5">Category Information</h3>

  <div class="list-group mb-5">
    <li class="d-flex justify-content-between list-group-item">
      <div>Category Name :</div>
      <div><%= @category.item %></div>
    </li>
  </div>

  <div class="d-flex justify-content-evenly">
    <div><%= link_to 'Edit', edit_category_path(@category) %></div>
    <div><%= link_to "Destroy", category_path(@category), data: { turbo_method: :delete,
                                                                  turbo_confirm: "Are you sure you want to delete?" } %></div>
    <div><%= link_to 'List', categories_path %></div>
  </div>
</div>
