<%= provide(:title, 'Category Show') %>

<%= render 'shared/header' %>

<div class="container w-50">
  <div class="fs-1 text-center mb-5">Category Show</div>

  <div class="text-center mb-3"><%= @category.item %></div>

  <div class="row">
    <div class="col text-end mt-5"><%= link_to 'Category Index', categories_path %></div>
    <div class="col text-center mt-5"><%= link_to 'Category Edit', edit_category_path(@category) %></div>
    <div class="col text-start mt-5"><%= link_to "Category Destroy", category_path(@category), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete?" } %></div>
  </div>
</div>
