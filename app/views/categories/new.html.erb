<%= provide(:title, 'New Registration for Category') %>

<%= render 'shared/header' %>

<div class="container w-25">
  <h3 class="text-center mb-5">New Registration for Category</h3>

  <%= form_with model: @category do |form| %>
    <%= form.label :item, class: 'form-label' %>
    <%= form.text_field :item, class: 'form-control mb-4' %>
    <%= form.submit class: 'form-control btn btn-primary mb-5' %>
  <% end %>

  <div class="text-center"><%= link_to 'List', categories_path %></div>
</div>
