<%= provide(:title, 'Edit for Category') %>

<%= render 'shared/header' %>

<div class="container w-25">
  <h3 class="text-center mt-5 mb-5">Edit for Category</h3>

  <%= form_with model: @category do |form| %>
    <%= form.label :item, class: 'form-label' %>
    <%= form.text_field :item, class: 'form-control mb-4' %>
    <%= render 'shared/error_messages', object: @category, label: :item %>

    <%= form.label :summary, class: 'form-label' %>
    <%= form.text_field :summary, class: 'form-control mb-4' %>
    <%= render 'shared/error_messages', object: @category, label: :summary %>

    <%= form.submit class: 'form-control btn btn-primary mb-5' %>
  <% end %>

  <div class="text-center"><%= link_to 'Information', category_path(@category) %></div>
</div>
