<% provide(:title, 'Main Menu') %>

<%= render 'shared/header' %>

<div class="container">
  <div class="fs-1 text-center mb-5">Main Menu</div>

  <div class="row justify-content-center mb-4">
    <div class="card" style="width: 18rem;">
      <% if sample_exists? %>
        <%= image_tag("experiment.svg", alt: "image cap", class: "card-img-top") %>
      <% else %>
        <%= image_tag("science.svg", alt: "image cap", class: "card-img-top") %>
      <% end %>
      <div class="card-body text-center">
        <%= link_to  "Go name search page", category_name_path, class: "btn btn-primary" %>
      </div>
    </div>

    <div class="card ms-5 me-5" style="width: 18rem;">
      <%= image_tag("category.svg", alt: "image cap", class: "card-img-top") %>
      <div class="card-body text-center">
        <%= link_to  "Go category search page", category_category_path, class: "btn btn-primary" %>
      </div>
    </div>

    <div class="card" style="width: 18rem;">
      <%= image_tag("factory.svg", alt: "image cap", class: "card-img-top") %>
      <div class="card-body text-center">
        <%= link_to  "Go maker search page", category_maker_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <div class="row justify-content-center mb-4">
    <div class="card" style="width: 18rem;">
      <%= image_tag("library_add.svg", alt: "image cap", class: "card-img-top") %>
      <div class="card-body text-center">
        <%= link_to  "Go samples new page", new_sample_path, class: "btn btn-primary" %>
      </div>
    </div>

    <div class="card ms-5 me-5" style="width: 18rem;">
      <%= image_tag("list.svg", alt: "image cap", class: "card-img-top") %>
      <div class="card-body text-center">
        <%= link_to  "Go samples index page", samples_path, class: "btn btn-primary" %>
      </div>
    </div>

    <div class="card" style="width: 18rem;">
      <%= image_tag("users_management.svg", alt: "image cap", class: "card-img-top") %>
      <div class="card-body text-center">
        <%= link_to  "Go users index page", users_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="card" style="width: 18rem;">
      <%= image_tag("settings.svg", alt: "image cap", class: "card-img-top") %>
      <div class="card-body text-center">
        <%= link_to  "Go categories page", categories_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
