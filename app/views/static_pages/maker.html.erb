<%= provide(:title, 'Search by maker') %>

<%= render 'shared/header' %>

<div class="container text-center w-25">
  <h3 class="mb-5">Search by maker</h3>

  <%= form_with url: category_maker_search_path, method: :get do |form| %>
    <%= form.text_field :keyword, class: "form-control mb-3", placeholder: "input keyword here." %>
    <%= form.submit "Search", class: "btn btn-secondary form-control mb-5" %>
  <% end %>

  <div><%= link_to "Main Menu", home_path %></div>
</div>
