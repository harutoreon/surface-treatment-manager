<%= form_with model: @user do |form| %>
  <%= form.label :name, "ユーザー名", class: "form-label" %>
  <%= form.text_field :name, class: "form-control mb-3" %>
  <%= render 'shared/error_messages', object: @user, label: :name %>

  <%= form.label :department, "部署名", class: "form-label" %>
  <%= form.select :department, ["品質管理部", "製造部", "開発部", "営業部"], { include_blank: true }, { class: "form-select mb-3" } %>
  <%= render 'shared/error_messages', object: @user, label: :department %>

  <%= form.label :password, "パスワード", class: "form-label" %>
  <%= form.password_field :password, class: "form-control mb-3" %>
  <%= render 'shared/error_messages', object: @user, label: :password %>

  <%= form.label :password_confirmation, "パスワードの確認", class: "form-label" %>
  <%= form.password_field :password_confirmation, class: "form-control mb-4" %>
  <%= render 'shared/error_messages', object: @user, label: :password_confirmation %>

  <%= form.submit button_name, class: "form-control btn btn-primary mb-5" %>
<% end %>
